<h1>投稿詳細</h1>

<!-- 投稿者情報 -->
<div style="display: flex; align-items: center; gap: 15px; margin-bottom: 20px; padding: 15px; background: #f8f9fa; border-radius: 10px;">
  <% if @post.user.has_profile_image? %>
    <%= image_tag @post.user.profile_image, style: "width: 50px; height: 50px; border-radius: 50%; object-fit: cover;" %>
  <% else %>
    <div style="width: 50px; height: 50px; border-radius: 50%; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center; color: white; font-weight: bold;">
      <%= @post.user.name.first.upcase if @post.user.name.present? %>
    </div>
  <% end %>
  <div>
    <h3 style="margin: 0; color: #333;">
      <%= link_to @post.user.name, user_path(@post.user), style: "text-decoration: none; color: inherit;" %>さんの投稿
    </h3>
    <small style="color: #666;"><%= @post.recorded_on ? l(@post.recorded_on, format: :japanese) : '日付が設定されていません' %></small>
  </div>
</div>

<p><strong>投稿:</strong> <%= @post.post %></p>
<p><strong>理由:</strong> <%= @post.reason %></p>
<p><strong>カテゴリ:</strong> <%= @post.category&.name %></p>

<!-- ストリーク情報表示 -->
<% streak_count = @post.streak_count %>
<div class="streak-info" style="background-color: #f0f8ff; padding: 15px; margin: 15px 0; border-radius: 8px; border: 1px solid #ddd;">
  <h4 style="margin-top: 0;">📈 継続状況</h4>
    <div style="display: flex; align-items: center; gap: 15px;">
    <div class="streak-status" style="padding: 8px 15px; border-radius: 20px; font-weight: bold; 
         background-color: <%= @post.recorded_on && @post.recorded_on > Date.current ? '#ff9800' : (streak_count > 0 ? '#4caf50' : '#87ceeb') %>; 
         color: white;">
      <% if @post.recorded_on && @post.recorded_on > Date.current %>
        ⏰ 未来の投稿
      <% elsif streak_count > 0 %>
        🔥 <%= streak_count %>日継続中
      <% else %>
        💔 うっかり
      <% end %>
    </div>
    <div style="font-size: 0.9em; color: #666;">
      開始日: <%= @post.recorded_on ? l(@post.recorded_on, format: :japanese) : '日付未設定' %>
    </div>
  </div>
</div>

<!-- バッジセクション（常に表示） -->
<div class="post-badges" style="background: linear-gradient(135deg, #ff7e5f 0%, #feb47b 100%); padding: 15px; margin: 15px 0; border-radius: 8px; color: white;">
  <h4 style="margin: 0 0 15px 0; display: flex; align-items: center; gap: 8px;">
    🏆 継続日数バッジ
  </h4>
  
  <!-- 継続日数に応じたバッジ -->
  <div style="margin-bottom: 15px;">
    <% if @post.badges.any? %>
      <div style="font-size: 0.9em; margin-bottom: 8px; opacity: 0.9;">
        ✅ 現在獲得中
      </div>
      <div style="display: flex; flex-wrap: wrap; gap: 10px;">
        <% @post.badges.each do |badge| %>
          <div style="background: rgba(255,255,255,0.3); padding: 10px 15px; border-radius: 20px; display: flex; align-items: center; gap: 8px; backdrop-filter: blur(10px); border: 2px solid rgba(255,255,255,0.4);">
            <span style="font-weight: bold;"><%= badge.name %></span>
          </div>
        <% end %>
      </div>
    <% else %>
      <div style="text-align: center; padding: 20px; opacity: 0.8;">
        <div style="font-size: 1.2em; margin-bottom: 8px;">🎯</div>
        <div style="font-size: 0.9em;">継続してバッジを獲得しよう！</div>
        <div style="font-size: 0.8em; opacity: 0.7; margin-top: 5px;">3日継続で最初のバッジを獲得できます</div>
      </div>
    <% end %>
  </div>
  
  <!-- 次の目標バッジ -->
  <% 
    current_badge_ids = @post.badges.pluck(:id)
    next_badge = Badge.streak_badges.where.not(id: current_badge_ids).where('required_days > ?', streak_count).order(:required_days).first
    available_badges = Badge.streak_badges.where.not(id: current_badge_ids).where('required_days > ?', streak_count).order(:required_days)
  %>
  
  
  <% if next_badge || available_badges.any? %>
    <div>
      <div style="font-size: 0.9em; margin-bottom: 8px; opacity: 0.9;">
        🎯 次の目標 (現在 <%= streak_count %>日継続中)
      </div>
      <div style="display: flex; flex-wrap: wrap; gap: 10px;">
        <% if next_badge %>
          <div style="background: rgba(255,255,255,0.1); padding: 10px 15px; border-radius: 20px; display: flex; align-items: center; gap: 8px; border: 2px dashed rgba(255,255,255,0.5);">
            <span style="font-weight: bold; opacity: 0.8;"><%= next_badge.name %></span>
            <span style="font-size: 0.8em; opacity: 0.7;">あと<%= next_badge.required_days - streak_count %>日</span>
          </div>
        <% end %>
        <% available_badges.where.not(id: next_badge&.id).each do |badge| %>
          <div style="background: rgba(255,255,255,0.05); padding: 8px 12px; border-radius: 15px; display: flex; align-items: center; gap: 6px; border: 1px dashed rgba(255,255,255,0.3);">
            <span style="font-size: 0.9em; opacity: 0.7;"><%= badge.name %></span>
            <span style="font-size: 0.8em; opacity: 0.6;">あと<%= badge.required_days - streak_count %>日</span>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div style="text-align: center; padding: 20px; opacity: 0.8;">
      <div style="font-size: 1.2em; margin-bottom: 8px;">🎉</div>
        <div style="font-size: 0.9em;">最高レベルに到達！継続を続けましょう！</div>
    </div>
  <% end %>
</div>

<%= render 'shared/favorite_button', post: @post %>

<% if user_signed_in? && current_user == @post.user %>
  <%= link_to '編集', edit_post_path(@post) %>
  <%= link_to '削除', post_path(@post), data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか？' } %>
<% end %>

<!-- コメント一覧 -->
<div class="comments-section">
  <h3>コメント (<%= @comments.count %>)</h3>
  
  <% if @comments.any? %>
    <div class="comments-list">
      <% @comments.each do |comment| %>
        <div class="comment" style="display: flex; gap: 12px; margin-bottom: 15px; padding: 15px; border: 1px solid #eee; border-radius: 8px;">
          <!-- コメント者のアイコン -->
          <div style="flex-shrink: 0;">
            <% if comment.user.has_profile_image? %>
              <%= image_tag comment.user.profile_image, style: "width: 40px; height: 40px; border-radius: 50%; object-fit: cover;" %>
            <% else %>
              <div style="width: 40px; height: 40px; border-radius: 50%; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center; color: white; font-weight: bold; font-size: 14px;">
                <%= comment.user.name.first.upcase if comment.user.name.present? %>
              </div>
            <% end %>
          </div>
          
          <!-- コメント内容 -->
          <div style="flex-grow: 1;">
            <div class="comment-header" style="display: flex; align-items: center; gap: 10px; margin-bottom: 8px;">
              <strong>
                <%= link_to comment.user.name, user_path(comment.user), style: "text-decoration: none; color: #333;" %>
              </strong>
              <span class="comment-date" style="color: #666; font-size: 0.9em;"><%= l comment.created_at, format: :long %></span>
              <% if user_signed_in? && (current_user == comment.user || current_user == @post.user) %>
                <%= link_to '削除', post_comment_path(@post, comment), 
                            data: { turbo_method: :delete, turbo_confirm: 'コメントを削除しますか？' },
                            class: 'comment-delete', style: "color: #dc3545; font-size: 0.9em; text-decoration: none;" %>
              <% end %>
            </div>
            <div class="comment-content">
              <%= simple_format(comment.content) %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="no-comments">まだコメントがありません。</p>
  <% end %>

  <!-- コメント投稿フォーム -->
  <% if user_signed_in? %>
    <div class="comment-form">
      <h4>コメントを投稿</h4>
      <%= form_with model: [@post, @comment], local: true do |f| %>
        <% if @comment.errors.any? %>
          <div class="error-messages">
            <ul>
              <% @comment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
        <div class="form-group">
          <%= f.text_area :content, placeholder: "コメントを入力してください", rows: 3, required: true %>
          <small class="form-text">最大500文字まで</small>
        </div>
        
        <div class="form-actions">
          <%= f.submit 'コメントを投稿', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="login-prompt">
      <%= link_to 'ログイン', new_user_session_path %>してコメントを投稿
    </p>
  <% end %>
</div>

<% if @post.is_draft %>
  <%= link_to '下書き一覧へ', drafts_posts_path %>
<% else %>
  <%= link_to 'ホームへ', home_path %>
  <% if user_signed_in? && current_user == @post.user %>
    <%= link_to 'マイページへ', user_path(current_user) %>
  <% else %>
    <%= link_to "#{@post.user.name}さんのページへ", user_path(@post.user) %>
  <% end %>
<% end %>
