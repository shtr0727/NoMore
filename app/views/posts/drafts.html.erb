<h1>下書き一覧</h1>

<% if @draft_posts.present? %>
  <% @draft_posts.each do |post| %>
    <div class="draft-item">
      <div class="draft-header">
        <h3><%= link_to post.post, post_path(post) %></h3>
        <div class="streak-badge streak-<%= post.recorded_on > Date.current ? 'future' : (post.streak_count > 0 ? 'active' : 'reset') %>">
          <% if post.recorded_on > Date.current %>
            ⏰ 未来の投稿
          <% elsif post.streak_count > 0 %>
            🔥 <%= post.streak_count %>日継続中
          <% else %>
            💔 うっかり
          <% end %>
        </div>
      </div>
      <p><strong>理由:</strong> <%= post.reason %></p>
      <% if post.category %>
        <p><strong>カテゴリー:</strong> <%= post.category.name %></p>
      <% end %>
      <p><strong>作成日:</strong> <%= l post.created_at, format: :long %></p>
    </div>
  <% end %>
<% else %>
  <p class="no-drafts">下書き投稿はありません。</p>
<% end %>

<%= link_to '戻る', user_path(current_user), class: 'back-link' %>
