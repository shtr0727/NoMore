<h1>プロフィール編集</h1>

<%= form_with model: @user, url: user_path(@user), method: :patch, local: true do |f|
%>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :profile %><br />
    <%= f.text_area :profile %>
  </div>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>

<%= link_to "マイページに戻る", user_path(@user) %>
