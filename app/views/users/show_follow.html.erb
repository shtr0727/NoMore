<div class="container">
  <h3 style="margin-bottom: 20px; color: #333;"><%= @title %></h3>
  <% if @users.any? %>
    <ul class="users follow" style="padding: 0; margin: 0;">
      <%= render @users %>
    </ul>
    <div style="margin-top: 20px; text-align: center;">
      <%= paginate @users %>
    </div>
  <% end %>
  
  <div style="margin-top: 30px; text-align: center;">
    <% if current_user == @user %>
      <%= link_to "マイページに戻る", @user, class: "btn btn-secondary", style: "padding: 10px 20px; text-decoration: none;" %>
    <% else %>
      <%= link_to "#{@user.name}さんのページに戻る", @user, class: "btn btn-secondary", style: "padding: 10px 20px; text-decoration: none;" %>
    <% end %>
  </div>
</div>
