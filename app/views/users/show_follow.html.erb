<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <% if @user.profile_image.attached? %>
        <%= image_tag @user.profile_image, alt: @user.name, class: "profile-image" %>
      <% else %>
        <div class="default-avatar">画像なし</div>
      <% end %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "プロフィールを見る", @user %></span>
      <span><b>投稿数:</b> <%= @user.posts.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <% if user.profile_image.attached? %>
              <%= link_to image_tag(user.profile_image, alt: user.name, size: "30x30", class: "user-avatar"), user %>
            <% else %>
              <%= link_to "[画像なし]", user %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= paginate @users %>
    <% end %>
  </div>
</div>
