<div class="post-form-container">
  <h1>パスワードの変更</h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, "新しいパスワード" %>
      <% if @minimum_password_length %>
        <small class="form-text">(<%= @minimum_password_length %>文字以上)</small>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "新しいパスワードを入力してください" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "新しいパスワード（確認）" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "新しいパスワードを再入力してください" %>
    </div>

    <div class="actions">
      <%= f.submit "パスワードを変更" %>
    </div>
  <% end %>

  <div style="text-align: center; margin-top: 1.5rem;">
    <%= render "devise/shared/links" %>
  </div>
</div>
