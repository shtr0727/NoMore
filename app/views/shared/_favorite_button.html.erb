<div class="favorite-button" style="display: flex; gap: 10px; align-items: center;">
  <% if user_signed_in? %>
    <% if current_user.favorited?(post) %>
      <%= button_to post_favorite_path(post), method: :delete, class: "btn btn-danger btn-sm", style: "border: none; background: none; padding: 0;" do %>
        <span class="btn btn-danger btn-sm">❤️ <%= post.favorites.count %></span>
      <% end %>
    <% else %>
      <%= button_to post_favorite_path(post), method: :post, class: "btn btn-outline-danger btn-sm", style: "border: none; background: none; padding: 0;" do %>
        <span class="btn btn-outline-danger btn-sm">🤍 <%= post.favorites.count %></span>
      <% end %>
    <% end %>
  <% else %>
    <span class="btn btn-outline-secondary btn-sm disabled">
      🤍 <%= post.favorites.count %>
    </span>
  <% end %>
  
  <div class="comment-count" style="display: flex; align-items: center; gap: 5px; font-size: 0.9em; color: #666;">
    💬 <%= post.comments.count %>
  </div>
</div>
